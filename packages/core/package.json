{
	"name": "@zoboz/core",
	"version": "3.2.2",
	"description": "zoboz | d.ts + esm + cjs - hassle",
	"homepage": "https://github.com/dariushalipour/zoboz#readme",
	"bugs": {
		"url": "https://github.com/dariushalipour/zoboz/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dariushalipour/zoboz.git"
	},
	"publishConfig": {
		"registry": "http://localhost:4873",
		"access": "public"
	},
	"files": ["dist/", "bin/", "cli/"],
	"license": "MIT",
	"author": "Dariush Alipour <drsh.alipour@gmail.com>",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/dts/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/dts/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js"
		},
		"./extend": {
			"types": "./dist/dts/extend.d.ts",
			"require": "./dist/cjs/extend.js",
			"import": "./dist/esm/extend.js"
		}
	},
	"bin": {
		"zoboz": "bin/zoboz.mjs"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "node ./scripts/build.mjs"
	},
	"devDependencies": {
		"@types/node": "22.10.5",
		"typescript": "5.7.3"
	},
	"dependencies": {
		"esbuild": "0.24.2",
		"oxc-resolver": "4.0.0",
		"@zoboz/bam": "1.2.0"
	}
}
